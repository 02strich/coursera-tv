<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:paddingBottom="15dp"
        android:text="Login Your Coursera"
        android:textAlignment="center"
        android:textColor="@color/lb_playback_icon_highlight_no_theme"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom|center_vertical|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:padding="10dp"
            android:text="Username"
            android:textAlignment="textEnd"
            android:textColor="@color/lb_playback_icon_highlight_no_theme"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="left|center_vertical"
            android:hint="Your email account"
            android:inputType="textEmailAddress"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_space1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:padding="10dp"
            android:text="Password"
            android:textAlignment="textEnd"
            android:textColor="@color/lb_playback_icon_highlight_no_theme"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="left|center_vertical"
            android:hint="Your password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView_space2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/button_login"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@color/lb_playback_icon_highlight_no_theme"
        android:text="Login"
        android:textColor="@color/lb_browse_header_color"
        android:textStyle="bold" />
</LinearLayout>
